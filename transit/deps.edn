{:paths ["src"]
 :deps  {org.clojure/clojure     {:mvn/version "1.10.3"}
         evidentsystems/converge {:local/root "../converge"}}
 :aliases
 {:dev
  {:extra-paths ["dev"]
   ;; cf. https://github.com/clojure-goes-fast/clj-async-profiler#jvm-options
   :jvm-opts    ["-Djdk.attach.allowAttachSelf"
                 "-XX:+UnlockDiagnosticVMOptions"
                 "-XX:+DebugNonSafepoints"]
   :extra-deps
   {org.clojure/tools.namespace              {:mvn/version "1.1.0"}
    com.clojure-goes-fast/clj-async-profiler {:mvn/version "0.5.1"}}}

  :test
  {:extra-paths ["test"]
   :extra-deps
   {lambdaisland/kaocha       {:mvn/version "1.60.945"}
    lambdaisland/kaocha-cljs2 {:mvn/version "0.0.35"}
    org.clojure/test.check    {:mvn/version "1.1.0"}}}

  :build
  {:deps       {io.github.seancorfield/build-clj
                {:git/tag "v0.5.2" :git/sha "8f75b81"}}
   :ns-default build}

  :clj
  {:extra-deps {com.cognitect/transit-clj {:mvn/version "RELEASE"}}}

  :cljs
  {:extra-deps {com.cognitect/transit-cljs {:mvn/version "RELEASE"}
                thheller/shadow-cljs       {:mvn/version "2.11.18"}}}}}
